{
  "rules": {
    "usernames": {
      "$username": {
        ".read": true,
        ".write": "root.child('users').child(auth.uid).child('username').val() === $username",
        ".validate": "auth != null && newData.val() === auth.uid"
      }
    },
    "isPrivateUser": {
      "$username": {
        ".read": true,
        ".write": "(!data.exists() && root.child('usernames').child($username).exists()) || root.child('usernames').child($username).val() === auth.uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "habits": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "habitData": {
      "$habitId": {
        ".read": "root.child('habits').child(auth.uid).child($habitId).exists()",
        ".write": "root.child('habits').child(auth.uid).child($habitId).exists()"
      }
    }
  }
}
